<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Firework.Maui.Pages.Components.SettingsComponent.CustomSwitch">
    <StackLayout Orientation="Horizontal" Margin="10,0,5,0">
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped" NumberOfTapsRequired="1" />
        </StackLayout.GestureRecognizers>
        <Label x:Name="MainLabel" FontSize="17" Style="{StaticResource MainTextStyle}" />
        <Switch x:Name="MainSwitch" Toggled="MainCheckBox_OnCheckedChanged" HorizontalOptions="EndAndExpand" />
    </StackLayout>
</ContentView>