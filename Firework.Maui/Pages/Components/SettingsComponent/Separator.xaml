<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Firework.Maui.Pages.Components.SettingsComponent.Separator">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontFamily" Value="OpenSansSemibold" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="TitleLabel" MinimumHeightRequest="10" Style="{StaticResource MainTextStyle}"
                   VerticalOptions="Center" VerticalTextAlignment="Center" FontSize="24" />
            <BoxView Grid.Column="1" x:Name="SeparatorBox" BackgroundColor="#545454" HeightRequest="7"
                     CornerRadius="10" VerticalOptions="Center" />
        </Grid>
    </ContentView.Content>
</ContentView>